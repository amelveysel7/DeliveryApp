<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clipToPadding="false">

  <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/supplier_cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="48dp"
    android:layout_marginTop="16dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
      android:id="@+id/supplier_rl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/colorDivider"
      android:paddingBottom="16dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="16dp">

      <TextView
        android:id="@+id/supplier_tv"
        style="@style/SelectUserTextStyle.Unselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/supplier_text"/>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
      android:id="@+id/user_rl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/colorDivider"
      android:paddingBottom="16dp"
      android:paddingEnd="24dp"
      android:paddingStart="24dp"
      android:paddingTop="16dp">

      <TextView
        android:id="@+id/user_tv"
        style="@style/SelectUserTextStyle.Unselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/user_text"/>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

</RelativeLayout>